#alias go=gvfs-open

function go ()
{
	gvfs-open "${1}" 2> /dev/null
}

function fn ()
{
	find . -iname "*${1}*" | sort
}

function fd ()
{
	find . -maxdepth 1 -iname "*${1}*" | sort
}

function fdgo ()
{
	find . -maxdepth 1 -iname "*${1}*" -print0 | xargs -0 -I {} gvfs-open {} 2> /dev/null
}

